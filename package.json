{
  "name": "@mirror-ai/llmflow",
  "version": "1.0.28",
  "description": "LLMFlow is a TypeScript-native library for seamless integration, orchestration, and management of Large Language Models (LLMs).",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "private": false,
  "public": true,
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc",
    "build:rollup": "rollup -c",
    "build": "npm run clean && npm run build:ts && npm run build:rollup && rimraf dist/temp",
    "test": "jest",
    "test:integration": "node test/integration.test.js",
    "prepublishOnly": "npm run test && npm run build",
    "publish": "npm version patch && npm publish"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-dynamic-import-vars": "^2.1.3",
    "@rollup/plugin-node-resolve": "^15.2.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/glob": "^7.1.3",
    "@types/jest": "^29.5.13",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.7.4",
    "babel-jest": "^29.7.0",
    "glob": "^7.1.7",
    "jest": "^29.7.0",
    "minimatch": "^3.0.4",
    "openai": "^4.65.0",
    "rimraf": "^6.0.1",
    "rollup": "^2.79.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "openai": "^4.65.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "dependencies": {
    "bottleneck": "^2.19.5"
  }
}
